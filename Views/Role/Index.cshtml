@model IQueryable<PgBookStore.Models.RoleViewModel>

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Roles</h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for..."/>
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go !</button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>List of Roles</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a asp-controller="Role" asp-action="Create"><i class="fa fa-plus"></i> Add Data</a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">
                    <div class="table-responsive">
                        <table class="table table-stripped jambo_table bulk_action">
                            <thead>
                                <tr class="headings">
                                    <th>
                                        <input type="checkbox" id="check-all" class="flat"/>
                                    </th>
                                    <th class="column-title">@Html.DisplayNameFor(model => Model.FirstOrDefault().RoleID)</th>
                                    <th class="column-title">@Html.DisplayNameFor(model => Model.FirstOrDefault().RoleName)</th>
                                    <th class="column-title">@Html.DisplayNameFor(model => Model.FirstOrDefault().Description)</th>
                                    <th class="column-title no-link last"><span class="nobr">Action</span></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var odd = false; }
                                @foreach (var item in Model)
                                {
                                    <tr class="@(odd ? "odd" : "even") pointer">
                                        <td class="a-center"><input type="checkbox" class="flat" name="table_records"/></td>
                                        <td>@item.RoleID</td>
                                        <td>@item.RoleName</td>
                                        <td>@item.Description</td>
                                        <td class="last">
                                            <a asp-controller="Role" asp-action="Edit" asp-route-id="@item.RoleID" class="btn btn-warning">Edit</a> 
                                            <a asp-controller="Role" asp-action="Delete" asp-route-id="@item.RoleID" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                    odd = !odd;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>